# Configurações para ambiente de teste
NODE_ENV=test
PORT=3002

# Banco de dados de teste
DATABASE_URL="file:./test.db"

# APIs (usar mocks em testes)
LATAM_API_KEY="test_latam_key"
LATAM_API_URL="http://localhost:3002/mock/latam"

GOL_API_KEY="test_gol_key"
GOL_API_URL="http://localhost:3002/mock/gol"

AZUL_API_KEY="test_azul_key"
AZUL_API_URL="http://localhost:3002/mock/azul"

# JWT para testes
JWT_SECRET="test_jwt_secret_key_for_testing_only"
JWT_EXPIRES_IN="1h"

# Cache (usar mock)
REDIS_URL="redis://localhost:6379/1"
CACHE_TTL=60

# Logs (silenciar em testes)
LOG_LEVEL="error"

# Rate limiting (mais permissivo em testes)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Email (usar mock)
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER="test@flightexec.com"
SMTP_PASS="testpass"